---
interface Props {
  link: string
}

const { link } = Astro.props
---

<li>
  <div class='flex items-center'>
    <a
      class='mr-2 text-sm font-medium text-gray-900'
      data-astro-prefetch
      href={link}
    >
      <slot />
    </a>
    <svg
      aria-hidden='true'
      class='h-5 w-4 text-gray-300'
      fill='currentColor'
      height={20}
      viewBox='0 0 16 20'
      width={16}
    >
      <path d='M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z'></path>
    </svg>
  </div>
</li>
