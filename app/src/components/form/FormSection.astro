---
interface Props {
  title: string
}

const { title } = Astro.props
---

<section>
  {
    title && (
      <div class='mb-6'>
        <h2 class='text-lg font-medium leading-7'>{title}</h2>
      </div>
    )
  }
  <div class='grid grid-cols-6 items-start gap-x-4 gap-y-6'>
    <slot />
  </div>
</section>
